<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:x="urn:import:muksihs.ipfs.photogallery.ui">
	<ui:style>
	button {
		margin: 3px;
	}
	</ui:style>
	<g:HTMLPanel>
		<div style='text-align: center'>
			<h3>Muksihs's Photo Gallery Maker</h3>
			<h4>for steemit</h4>
		</div>
		<div style='float: left; max-width: 100%; padding: 4px; margin: 4px;'>
			<hr style='clear: left;' />
			<div style="clear: left; width: auto;">
				<m:MaterialRadioButton ui:field="rb1" name="sidebyside"
					text="1 UP" title="Generate a gallery that displays vertically."></m:MaterialRadioButton>
				<m:MaterialRadioButton ui:field="rb2" name="sidebyside"
					text="2 UP" title="Generate a gallery that displays 2 images side by side."></m:MaterialRadioButton>
				<m:MaterialRadioButton ui:field="rb4" name="sidebyside"
					text="4 UP" title="Generate a gallery that displays 4 images side by side."></m:MaterialRadioButton>
			</div>
			<!-- <div style='clear: left;width: auto'> -->
			<!-- <m:MaterialRadioButton ui:field="rb8" name="sidebyside" -->
			<!-- text="8 UP" title="Generate a gallery that displays 8 images side 
				by side."></m:MaterialRadioButton> -->
			<!-- </div> -->
			<hr style='clear: left;' />
			<div style='clear: left;width: auto'>
				<span>Add Images: </span>
				<g:FileUpload ui:field="add"></g:FileUpload>
			</div>
			<div style='clear: left;width: auto'>
				<m:MaterialButton ui:field="clear" text="Clear All"></m:MaterialButton>
			</div>
			<div style='clear: left;width: auto'>
				<m:MaterialButton ui:field="edit" text="Edit Text"></m:MaterialButton>
			</div>
			<div style='clear: left;width: auto'>
				<m:MaterialButton ui:field="generate" text="Generate"></m:MaterialButton>
			</div>
			<hr style='clear: left;' />
		</div>
		<div ui:field="preview" class="Markdown"
			style='float:right; max-width: 800px; margin: 4px; width: auto; border: 4px solid black; padding: 4px; margin: 4px'>
			<div ui:field="textPreview">
				Preview Text
			</div>
			<hr />
			<div ui:field="picPreview">
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 